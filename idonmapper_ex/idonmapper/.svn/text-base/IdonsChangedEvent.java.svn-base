package idonmapper;

import java.util.HashMap;

/*
 *
 */
public class IdonsChangedEvent extends UserEvent
{
    private HashMap<Coord, Idon> addedIdons = null;
    private HashMap<Coord, Idon> removedIdons = null;
    
    public IdonsChangedEvent(EventType type, HashMap<Coord, Idon> idonMap)
    {
        super(type);
        if(type == EventType.IDONS_ADDED)
        {
            addedIdons = idonMap;
        }
        else if(type == EventType.IDONS_REMOVED)
        {
            removedIdons = idonMap;
        }
        else
        {
            throw new IllegalStateException();
        }
    }
}