package idonmapper;

/*
 * Directions used for easily associating
 * adjacent hexagons together.
 */
public enum Direction
{
    NE, E, SE, SW, W, NW;

    Direction()
    {
    }

    /**
     * Returns the opposite direction to @dir.
     */
    public static Direction getOpposite(Direction dir)
    {
        switch(dir)
        {
            case NE :
                return SW;
            case E:
                return W;
            case SE:
                return NW;
            case SW:
                return NE;
            case W:
                return E;
            case NW:
                return NE;
            default:
                break;
        }
        return null;
    }

    /**
     * Returns the Coordinate from Coord @c in the specified
     * @direction.
     */
    public static Coord directionToCoord(Coord c, Direction direction)
    {
        /*
         * Careful! Odd and even columns behave differently.
         */

        if(c == null)
        {
            System.out.println("directionToCoord - coord is null");
            return null;
        }

        if(c.y % 2 != 0)
        {
            // odd columns
            switch(direction)
            {
                case NE :
                    return new Coord(c.x, c.y - 1);
                case E:
                    return new Coord(c.x + 1, c.y);
                case SE:
                    return new Coord(c.x, c.y + 1);
                case SW:
                    return new Coord(c.x -1, c.y +1);
                case W:
                    return new Coord(c.x - 1, c.y);
                case NW:
                    return new Coord(c.x - 1, c.y - 1);
            }

        }
        else
        {
            // even columns
            switch(direction)
            {
                case NE :
                    return new Coord(c.x + 1, c.y - 1);
                case E:
                    return new Coord(c.x + 1, c.y);
                case SE:
                    return new Coord(c.x + 1, c.y + 1);
                case SW:
                    return new Coord(c.x, c.y + 1);
                case W:
                    return new Coord(c.x -1, c.y);
                case NW:
                    return new Coord(c.x, c.y -1);
            }

        }
        return null;
    }


}